@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<h2>Sylist Details</h2>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3>

@if (Model.Clients.Count == 0)
{
  <p>This stylist has no clients at this time</p>
}

@foreach (Client client in Model.Clients)
{
  <h3>Client: @Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId }) </h3>
}

<p>@Html.ActionLink("Add New Client", "Create", "Clients")</p>

<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
<br>

<p>@Html.ActionLink("Back To Stylists", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
