@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>

@if(Model.Count == 0)
{
  <h2>Sorry! There are no stylists in this salon. Please add one!</h2>
}

@foreach(Stylist stylist in Model)
{
  @Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId})<br>
}

<p>@Html.ActionLink("Add Stylist", "Create", "Stylists")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>