@{
  Layout = "_Layout";
}


@using HairSalon.Models
@model HairSalon.Models.Client

<h4>Add New Client</h4>

@if (@ViewBag.StylistId as SelectList == null)
{
 <p>I'm sorry, there are no stylists available at this time. We are not taking new clients at this time</p>
}
else
{
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Number)
    @Html.TextBoxFor(model => model.Number)

    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <input type="submit" value="Add new client" class="btn-btn-default" />

  }
}

<p>@Html.ActionLink("Show all clients", "Index")</p>


